<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.MaterialComponents.Light"
    tools:context=".features.projectimprovement.ui.create.ProjectImprovStep6Fragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:scrollbars="none"
        android:scrollingCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_large"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:text="@string/nilai_output_benefit_yang_diharapkan"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_80" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary"
                        app:boxStrokeColor="@color/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/output_value"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start"
                            android:lines="5"
                            android:scrollbars="vertical|horizontal"
                            android:textColor="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_medium"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_large"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:text="@string/perhitungan_nqi"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_80" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_medium"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/spacing_large"
                            android:layout_marginBottom="@dimen/spacing_medium"
                            android:text="@string/estimasi"
                            android:layout_gravity="center_horizontal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_80" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="@dimen/spacing_large"
                            android:background="@color/grey_10" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/benefit"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/keterangan"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="true">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/colorPrimary"
                                app:boxStrokeColor="@color/colorPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/estimasi_benefit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/rp"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:padding="0dp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorPrimary" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/colorPrimary"
                                app:boxStrokeColor="@color/colorPrimary">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/estimasi_benefit_Keterangan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="0dp"
                                    android:imeOptions="actionNext"
                                    android:maxLines="2"
                                    android:lines="2"
                                    android:textColor="@color/colorPrimary"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/cost"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/keterangan"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="true">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/colorPrimary"
                                app:boxStrokeColor="@color/colorPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/estimasi_cost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/rp"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:padding="0dp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorPrimary" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/colorPrimary"
                                app:boxStrokeColor="@color/colorPrimary">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/estimasi_cost_keterangan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="0dp"
                                    android:imeOptions="actionNext"
                                    android:maxLines="2"
                                    android:lines="2"
                                    android:textColor="@color/colorPrimary"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="true">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/nqi"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/grey_80"
                                app:boxBackgroundColor="@color/grey_10"
                                app:boxStrokeColor="@color/grey_80">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/estimasi_nqi_total"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/rp"
                                    android:padding="0dp"
                                    android:imeOptions="actionDone"
                                    android:inputType="numberDecimal"
                                    android:enabled="false"
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:lines="1"
                                    android:textColor="@color/grey_80"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_medium"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/spacing_large"
                            android:layout_marginBottom="@dimen/spacing_medium"
                            android:text="@string/aktual"
                            android:layout_gravity="center_horizontal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_80" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="@dimen/spacing_large"
                            android:background="@color/grey_10" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/benefit"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/keterangan"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="true">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/colorPrimary"
                                app:boxStrokeColor="@color/colorPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/aktual_benefit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/rp"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:padding="0dp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorPrimary" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/colorPrimary"
                                app:boxStrokeColor="@color/colorPrimary">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/aktual_benefit_Keterangan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="0dp"
                                    android:imeOptions="actionNext"
                                    android:maxLines="2"
                                    android:lines="2"
                                    android:textColor="@color/colorPrimary"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/cost"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/keterangan"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="true">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/colorPrimary"
                                app:boxStrokeColor="@color/colorPrimary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/aktual_cost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/rp"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:padding="0dp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorPrimary" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/colorPrimary"
                                app:boxStrokeColor="@color/colorPrimary">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/aktual_cost_keterangan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="0dp"
                                    android:imeOptions="actionNext"
                                    android:maxLines="2"
                                    android:lines="2"
                                    android:textColor="@color/colorPrimary"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="true">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/nqi"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_xxlarge"
                                android:layout_weight="1"
                                android:paddingHorizontal="1dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:textColorHint="@color/grey_80"
                                app:boxBackgroundColor="@color/grey_10"
                                app:boxStrokeColor="@color/grey_80">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/aktual_nqi_total"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/rp"
                                    android:padding="0dp"
                                    android:imeOptions="actionDone"
                                    android:inputType="numberDecimal"
                                    android:enabled="false"
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:lines="1"
                                    android:textColor="@color/grey_80"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>